#!/bin/sh

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

export GEOMTRANSPORT=${DIR%%/etc*}

export GEOMTRANSPORT_THIRD_PARTY=$GEOMTRANSPORT/third-party

export PATH=$GEOMTRANSPORT/src/scripts/:$PATH
export PYTHONPATH=$GEOMTRANSPORT/src/scripts/:$PYTHONPATH

export CXXFLAGS=$WM_CXXFLAGS

export GEOMTRANSPORT_CPP_DIRECTIVE='-std=c++1y' 


# Third party libraries 
export GEOMTRANSPORT_GTEST=$GEOMTRANSPORT_THIRD_PARTY/googletest
export GEOMTRANSPORT_GTEST_SRC=$GEOMTRANSPORT_GTEST/googletest
export GEOMTRANSPORT_GTEST_INCLUDE=$GEOMTRANSPORT_GTEST_SRC/include/gtest
export GEOMTRANSPORT_GTEST_BUILD=$GEOMTRANSPORT_GTEST/build/lib

export LD_LIBRARY_PATH="$GEOMTRANSPORT_GTEST_BUILD":$LD_LIBRARY_PATH

source $GEOMTRANSPORT/third-party/two-phase-validation/etc/bashrc
