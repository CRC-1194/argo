FoamFile
{
    version	2;
    format	ascii;
    class	dictionary;
    location	"system";
    object	meshDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

surfaceFile	"cfmesh-sphere.stl";

maxCellSize	0.01;

boundaryLayers
{
    // Local settings applied to patches.
    patchBoundaryLayers
    {
        // Patch name. Supports regular expressions.
        "sphere"
        {
            // Number of boundary layers at walls.
            nLayers	3;
            
            // Thickness ratio between consecutive layers.
            thicknessRatio 100;	
        }
    }
}


localRefinement
{
    // Local refinement regions
    "sphere"
    {
        cellSize 0.0075;
    }
}

