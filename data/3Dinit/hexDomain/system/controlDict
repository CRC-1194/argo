FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     voFoamTestAdvection;

startFrom       latestTime;

startTime       0;

stopAt          endTime;

deltaT          1; 

endTime         10; // Perform 10 random intersection tests.

writeControl    adjustableRunTime; // Do not write anything.
 
writeInterval   $endTime;

purgeWrite      0;

writeFormat     ascii;

writePrecision  15;

writeCompression uncompressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

adjustTimeStep  no;

maxCo           1; 

maxAlphaCo      0.1;  

maxDeltaT       1;

