FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      vofInitDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

fieldName       alpha.water;
writeGeometry   off;
invert          off;
writeAllFields  on;
checkVolume     on;
refinementLevel @!MAX_REFINEMENT_LEVEL!@;

distCalc
{
    surfaceType triSurface;
    narrowBandWidth 4.0;
}

