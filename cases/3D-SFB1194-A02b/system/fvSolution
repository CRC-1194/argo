FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    cellMotionU
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-7;
        relTol          0;
        minIter 1;
    }

    p
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-9;
        relTol          0;
        minIter 1;
    }

    signedDist 
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       0.1;
        relTol          0.1;
        minIter 1;
    }

    U
    {
        solver          PBiCG;
        preconditioner  DILU;
        tolerance       1e-6;
        relTol          0;
        minIter 1;
    }
}

PISO
{
    nOuterCorrectors            10;
    nCorrectors                 3;
    nNonOrthogonalCorrectors    1;
	ddtPhiCorr	true;
    pRefPoint (0 0 0);
    pRefValue 0;
}

