FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      functionObject2;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

functions
{
    kinetic_energy
    {
        libs            ("libutilityFunctionObjects.so");
        type            coded;
        name            kinetic_energy;
        writeControl    timeStep;
        writeInterval   1;

        codeWrite
        #{

            const volScalarField& rho =
                mesh().lookupObject<volScalarField>("rho");
            const volVectorField& U =
                mesh().lookupObject<volVectorField>("U");
	    const auto& cellVolume = mesh().V();
            const auto& e = 0.5*rho*cellVolume*magSqr(U);
            const auto& SumKinE = gSum(e);
            Info<< "##Sum of kinetic_energy = " << SumKinE << endl;

            if (Pstream::master())
            {
             	fileName outputFile = ("./SumKinE.dat");
                autoPtr<OFstream> outputFilePtr;

                if (!exists(outputFile))
                {
                    OFstream is(outputFile);
                    outputFilePtr.reset(new OFstream(outputFile));
                    outputFilePtr() << "time" << tab << "SumKinE" << endl;
                    outputFilePtr() << "0" << tab << SumKinE <<endl;
                }

                 outputFilePtr.reset(new OFstream(outputFile,IOstreamOption(),true));
                 outputFilePtr() << mesh().time().timeName() << tab << SumKinE << endl;
             }
        #};
    }
}
